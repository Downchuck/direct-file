{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "lib": ["es2019", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
